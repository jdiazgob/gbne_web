generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Noticia {
  id          Int      @id @default(autoincrement())
  titulo      String
  descripcion String
  categoria   String
  fecha       DateTime
  autor       String
  fotografo   String?
  imagen_url  String?
  destacada   Boolean  @default(false)
  slug        String   @unique
}

model Usuario {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  nombre   String
  rol      String @default("admin")
}